doctype html
html
  head
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    link(rel='stylesheet' href='css/style.css' type='text/css')
    title Full Contact
  body(ng-app='persons')
    .container(ng-controller='PersonsCtrl')
      .row
        .jumbotron.pink
          h1 STALKER.0
          p Are you on or off of the radar?
          p
            a.btn.btn-primary.btn-lg(href='#' role='button') Find Out
      
      nav.navbar.navbar-default.pink
        .contaner-fluid     
          form.navbar-form(role='search')
            .form-group.col-md-6
              input.form-control(type='email' ng-model='searchTerm' placeholder='email of some awesome person')
              button.btn.btn-warning(ng-click='getURL()') Find Email
              p {{searchTerm}}

      .row
        h2(ng-model='name') {{name}}
        
      .row
        .thumbnail.pink
          .imgDiv
            img(ng-repeat='photo in photos' ng-src='{{photo.url}}')
          
      .row
        ul.list-group(ng-repeat='website in websites') 
          li.list-group-item.pink
            a(href='{{website.url}}') {{website.url}}
      
      .row
        ul.list-group(ng-repeat='profile in profiles')
          li.pink.list-group-item {{profile.type}}
          li.pink.list-group-item {{profile.url}}
          li.pink.list-group-item {{profile.username}}

    script(type='text/javascript' src='vendor/jquery/dist/jquery.js')
    script(type='text/javascript' src='vendor/lodash/lodash.js')
    script(type='text/javascript' src='vendor/angular/angular.js')
    script(type='text/javascript' src='js/main.js')
    script(type='text/javascript' src='models/user.js')
